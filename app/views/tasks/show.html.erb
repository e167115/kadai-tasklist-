<h1>No:<%= @task.id %>タスク</h1>

<table class="table table-bordered">
    <tr>
        <th>NO</th>
        <td><%= @task.id %></td>
    </tr>
    <tr>
        <th>ステータス</th>
        <td><%= @task.status %></td>
    </tr>
    <tr>
        <th>内容</th>
        <td><%= @task.content %></td>
    </tr>
</table>


<%= link_to "このタスクを編集する",  edit_task_path(@task), class: "btn btn-light" %>


<%= link_to "このタスクを削除する", @task, method: :delete, data: { confirm: "本当に削除しますか？？"}, class:"btn btn-danger" %>
